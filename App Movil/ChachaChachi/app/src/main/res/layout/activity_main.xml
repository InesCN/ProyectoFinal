<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ins.chachachachi.MainActivity">

    <ImageView
        android:id="@+id/chachaIcon"
        android:layout_width="101dp"
        android:layout_height="82dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/chacha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cleaner64"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:layout_alignEnd="@+id/etUser"
        android:layout_alignRight="@+id/etUser"
        android:layout_marginBottom="209dp"
        android:layout_marginRight="46dp"
        android:layout_marginTop="29dp"
        android:text="@string/introduzca_sus_datos"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnEntrar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_margin="70dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/usuario"
        android:text="ignacio1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUser"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/contrase_a"
        android:inputType="textPassword"
        android:text="SoyIgnacio"
        app:layout_constraintLeft_toLeftOf="@+id/etUser"
        app:layout_constraintRight_toRightOf="@+id/etUser"
        app:layout_constraintTop_toBottomOf="@+id/etUser" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="169dp"
        android:text="ENTRAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etPassword"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</android.support.constraint.ConstraintLayout>
